<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityB">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <ImageView
        android:id="@+id/imagesPoularB"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></ImageView>
    <TextView
        android:id="@+id/tvNameB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Poular"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"></TextView>
    <TextView
        android:id="@+id/tvPriceB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvNameB"
        android:layout_marginRight="20dp"></TextView>
    <ImageButton
        android:id="@+id/imgButMinus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/minus"
        app:layout_constraintTop_toBottomOf="@id/tvNameB"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/tvNameB"
        android:layout_marginLeft="10dp"></ImageButton>
    <TextView
        android:id="@+id/tvQuanB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgButMinus"
        android:text="1"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imgButMinus"
        android:layout_marginLeft="15dp"></TextView>
    <ImageButton
        android:id="@+id/imgButAdd"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/add"
        app:layout_constraintTop_toTopOf="@id/imgButMinus"
        app:layout_constraintStart_toEndOf="@id/tvQuanB"
        android:layout_marginLeft="15dp"></ImageButton>
    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Details"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imgButMinus"
        app:layout_constraintStart_toStartOf="@id/tvNameB"
        android:layout_marginTop="30dp"></TextView>
    <TextView
        android:id="@+id/tvTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONE OF A KIND YACHT INTERIOR IS MADE TO \n FIT YOUR BOAT TO MAKE IT AS COMFORTABLE \n AS YOUR HOUSE"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail"
        app:layout_constraintStart_toStartOf="@id/tvNameB"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"></TextView>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custem"
        android:text="Add to Cart"
        android:textSize="25sp"
        app:backgroundTint="#F66512"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTT" />


</androidx.constraintlayout.widget.ConstraintLayout>