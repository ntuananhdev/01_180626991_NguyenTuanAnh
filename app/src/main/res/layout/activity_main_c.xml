<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityC">
    <ListView
        android:id="@+id/lvPoularCart"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></ListView>
    <TextView
        android:id="@+id/tvLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lvPoularCart"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>
    <TextView
        android:id="@+id/tvSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal"
        app:layout_constraintTop_toBottomOf="@id/tvLine1"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:id="@+id/tvPriceSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvLine1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:textSize="25sp"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:id="@+id/tvDeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery fee"
        app:layout_constraintTop_toBottomOf="@id/tvSub"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:id="@+id/tvFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free"
        app:layout_constraintTop_toTopOf="@id/tvDeli"
        app:layout_constraintEnd_toEndOf="@id/tvPriceSub"
        android:textSize="21sp"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:id="@+id/tvLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDeli"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"></TextView>
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        app:layout_constraintTop_toBottomOf="@id/tvLine2"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/tvPriceTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvLine2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:textSize="25sp"
        android:layout_marginTop="10dp"></TextView>
    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custem"
        android:text="checkout"
        android:textSize="25sp"
        app:backgroundTint="#F66512"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        android:layout_marginTop="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>